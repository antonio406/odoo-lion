<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard para enviar WhatsApp -->
    <record id="view_crm_lead_send_whatsapp_form" model="ir.ui.view">
        <field name="name">crm.lead.send.whatsapp.form</field>
        <field name="model">crm.lead.send.whatsapp</field>
        <field name="arch" type="xml">
            <form string="Enviar WhatsApp">
                <group>
                    <field name="lead_id" invisible="1"/>
                    <field name="phone"/>
                    <field name="message" widget="text"/>
                </group>
                <footer>
                    <button string="Enviar" name="action_send" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
